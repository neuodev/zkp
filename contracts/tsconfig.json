{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "staging"],
  "include": [
    "artifacts/**/*",
    "artifacts/**/*.json",
    "deploy/**/*",
    "lib/**/*",
    "tasks/**/*",
    "test/**/*",
    "testing/**/*",
    "typechain/**/*",
    "types/**/*",
    "./hardhat.config.ts"
  ],
  "files": ["./hardhat.config.ts"]
}
