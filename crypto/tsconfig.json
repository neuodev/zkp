{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "es2018"],
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "*": [
        "../node_modules/*",
        "node_modules/*",
        "scripts/*",
        "src/*",
        "src/types/*",
        "types/*"
      ]
    },
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "jest.config.js"]
}
